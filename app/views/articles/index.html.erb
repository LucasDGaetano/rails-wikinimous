<ul class="list-group">
<% @articles.each do |article| %>
  <li class="list-group-item">
    <h2 class="text-decoration-none !important"><%= link_to article.title, article_path(article) %></h2>
    <p><%= article.content  %></p>
  </li>
<% end %>
</ul>
<%= link_to "create an article!", new_article_path %>
